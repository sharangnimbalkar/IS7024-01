@page
@model FinalXmL.Pages.ChicagoCafesModel
@{
    ViewData["Title"] = "ChicagoCafes";
    var ListofCafes = (Cafe.ChicagoCafe[])ViewData["allCafes"];
}


<style>
    body {
        background-image: url("https://wallpaperaccess.com/full/392036.jpg");
        background-repeat: round;
        background-attachment: fixed;
    }
</style>


<div class="text-center">
    <h1 class="hdr-text"><font color="gold" size="10"><strong>Chicago SideWalk Cafe Owners</strong></font></h1>
</div>

    <br />
    
        
            <table class="table table-border table-striped table-hover auto-index">

                <thead class="thead-light">
                    <tr>
                        <th>Cafe Name</th>
                        <th>Street Name</th>
                        <th>Zip Code</th>
                        <th>Permit Number</th>
                    </tr>
                </thead>
                <tbody class="table-light">
                    @{
                        foreach (Cafe.ChicagoCafe chicago in ListofCafes)
                        {
                            <tr>
                                <td>@chicago.LegalName</td>
                                <td>@chicago.Street</td>
                                <td>@chicago.ZipCode</td>
                                <td>@chicago.PermitNumber</td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
       
    